<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ExercisePage"
             Title="Exercises">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="30">
            <Label Text="Pick the muscle group you wish to work on." FontAttributes="Bold" FontSize="24" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="#353D60"></Label>
            <Picker x:Name="musclePicker" Title="Select your muscle group" TitleColor="White" BackgroundColor="#353D60"
                    SelectedItem="selectedMuscle"></Picker>
            <ListView x:Name="exerciseList" BackgroundColor="#353D60" SeparatorColor="White" HasUnevenRows="True" VerticalOptions="FillAndExpand" RowHeight="50" HeightRequest="200">

            </ListView>

        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>